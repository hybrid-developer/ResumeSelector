<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/fragment_margin">

    <TextView
        android:id="@+id/skilleName"
        style="@style/TextAppearance.ListItemSecondaryTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Calvin Klien" />

    <TextView
        android:id="@+id/skillLevel"
        style="@style/TextAppearance.ListItemDefault"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/skilleName"
        tools:text="Calvin Klien" />

    <TextView
        android:id="@+id/skillKeywords"
        style="@style/TextAppearance.ListItemDescription"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/skillLevel"
        tools:text="f;asfj;kajfklafklajsfas" />

</androidx.constraintlayout.widget.ConstraintLayout>