<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/list_item_selector"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <ImageView
        android:id="@+id/categoryIcon"
        android:layout_width="@dimen/category_list_item_image_view_width"
        android:layout_height="@dimen/category_list_item_image_view_height"
        android:layout_marginStart="@dimen/list_item_vertical_margin_lower"
        android:layout_marginTop="@dimen/list_item_vertical_margin_lower"
        android:layout_marginBottom="@dimen/list_item_vertical_margin_lower"
        android:contentDescription="@string/app_name"
        android:scaleType="fitXY"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_launcher_background"
        tools:srcCompat="@drawable/ic_launcher_background" />

    <TextView
        android:id="@+id/categoryName"
        style="@style/TextAppearance.categoryListItemTitle"
        android:layout_width="0dp"
        android:layout_height="@dimen/category_list_item_image_view_height"
        android:layout_marginTop="@dimen/list_item_vertical_margin_lower"
        android:layout_marginStart="@dimen/list_item_vertical_margin_lower"
        android:layout_marginEnd="@dimen/list_item_vertical_margin_lower"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/categoryIcon"
        app:layout_constraintVertical_chainStyle="packed"
        tools:text="Title Goes here" />
</androidx.constraintlayout.widget.ConstraintLayout>