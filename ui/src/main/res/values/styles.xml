<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="TextAppearance" />

    <style name="TextAppearance.ListItemTitle">
        <item name="android:textColor">@color/colorListItemTitle</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold|italic</item>
        <item name="android:textSize">@dimen/list_item_main_title_font_size</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Medium.Inverse</item>
    </style>

    <style name="TextAppearance.categoryListItemTitle" parent="TextAppearance.ListItemTitle">
        <item name="android:gravity">left|center_vertical</item>
    </style>

    <style name="TextAppearance.ListItemSecondaryTitle">
        <item name="android:textColor">@color/colorListItemDefault</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textSize">@dimen/list_item_secondary_title_font_size</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Medium.Inverse</item>
    </style>
    
    <style name="TextAppearance.ListItemDescription">
        <item name="android:textColor">@color/colorListItemDescription</item>
        <item name="android:textStyle">bold|italic</item>
        <item name="android:textSize">@dimen/list_item_description_font_size</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Medium.Inverse</item>
    </style>

    <style name="TextAppearance.ListItemDefault">
        <item name="android:textColor">@color/colorListItemEmail</item>
        <item name="android:textStyle">bold|italic</item>
        <item name="android:textSize">@dimen/list_item_default_font_size</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Medium.Inverse</item>
    </style>
</resources>
